{
  "manifest_version": 3,
  "name": "xLoad",
  "version": "1.0",
  "description": "Add the try it yourself examples to W3Schools articles",
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "38": "images/icon-38.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
       "https://www.w3schools.com/*"
      ]
    }
  ]
}